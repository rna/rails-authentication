<h1>Sign up</h1>

<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages'%>    
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.label :email %>
    <%= f.email_field :email %>
    
    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br>
    <br>
    <%= f.submit "Register" %>
    <%= link_to '<button type="button">Already Registered?</button>'.html_safe, login_path, method: "get" %> 

<% end %>
